<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Nodejs basic</title>
</head>

<body>
    <header class="header pixel">
        <div class="main-content"></div>
        <div class="body"> <!-- logo -->
            <img src="./images/Logo.svg" alt="Lesson.">
            <!-- navigation -->
            <nav class="nav">
                <ul>
                    <li class="active"><a href="/">Home</a></li>
                </ul>
                <ul>
                    <li>
                        <a href="/upload">Upload file</a>
                    </li>
                </ul>
                <ul>
                    <li><a href="#!">Courses</a></li>
                </ul>
                <ul>
                    <li><a href="#!">Pricing</a></li>
                </ul>
                <ul>
                    <li><a href="#!">Reviews</a></li>
                </ul>
            </nav>
            <!-- btn sign -->
            <div class="action"><a href="" class="btn btn-sign-up">Sign Up</a></div>
        </div>
        </div>
    </header>
    <div class="w3-container">
        <h2>List user Table</h2>

        <table class="w3-table w3-striped w3-bordered w3-border w3-hoverable">
            <thead>
                <tr class="w3-light-grey">
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>email</th>
                    <th>address</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id %>
                        </td>
                        <td>
                            <%= dataUser[i].firstName %>
                        </td>
                        <td>
                            <%= dataUser[i].lastName %>
                        </td>
                        <td>
                            <%= dataUser[i].email %>
                        </td>
                        <td>
                            <%= dataUser[i].address %>
                        </td>
                        <td class="crud">
                            <!-- detail -->
                            <a href="/detail/users/<%= dataUser[i].id %>">Detail</a>
                            <!-- edit -->
                            <form action="/edit/user/<%= dataUser[i].id %>" method="get">
                                <button type="submit">Edit</button>
                            </form>
                            <!-- delete -->
                            <form action="/delete-user" method="post">
                                <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <div class="create-user-container">
        <h1>Create a new user</h1>
        <form action="/create-user" method="post">
            <div>
                <label>First Name</label>
                <input type="text" name="firstName">
            </div>
            <div>
                <label>Last name</label>
                <input type="text" name="lastName">
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="email">
            </div>
            <div>
                <label>Address</label>
                <input type="text" name="address">
            </div>
            <button class="btn-submit" type="submit">submit</button>
        </form>
    </div>
</body>

</html>